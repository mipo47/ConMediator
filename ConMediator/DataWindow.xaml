<Window x:Class="ConMediator.DataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Data window" Height="800" Width="500">
    <Grid>
        <CheckBox Height="18" HorizontalAlignment="Left" Margin="2,2,0,0" Width="70" Name="HexCheck" VerticalAlignment="Top">Show hex</CheckBox>
        <CheckBox Height="18" HorizontalAlignment="Left" Margin="72,2,0,0" Name="NumberCheck" VerticalAlignment="Top">Show positions</CheckBox>
        
        <Label HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,170,0">Encoding:</Label>
        <ComboBox Name="EncodingCombo" Height="20" Width="170" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" />
        
        <RichTextBox Name="DataRichText" Margin="0,21,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
        </RichTextBox>
    </Grid>
</Window>
